{
  "name" : "frdl/codebase",
  "description": "Codebase API related packages...",	  
  "license": ["MIT"],	 
  "homepage": "https://webfan.de/install/",
  "authors":[
	  {
	    "name" : "Till Wehowski",
	    "email" : "software@frdl.de"
	  }
	  ],
   
"scripts": {
   "UNCOMMENT_IF_pre-install-cmd": [
         "-d memory_limit=-1 composer self-update --2"
    ], 
    "post-root-package-install": [
        "php-legal-licenses generate --hide-version"
    ],
    "post-create-project-cmd": [
        "php-legal-licenses generate --hide-version"
    ],
    "post-install-cmd": [
        "php-legal-licenses generate --hide-version"
    ],
    "post-update-cmd": [
        "php-legal-licenses generate --hide-version"
    ]
},
"extra" : {
	 "compile-mode": "all",
	 "webfan" : {
		 "install" : {
		     
		 }
	 }, 
   "downloads": {
              "*": {
        "path": "./../../../modules/{$id}",
        "ignore": ["test", "tests", "doc", "docs", ".*"]
      },
      "frdl/array-helper": {
        "url": "https://github.com/frdl/array-helper/archive/refs/heads/main.zip",
        "path": "./../../../modules/frdl/array-helper",
        "ignore": [".*"]
      },
      "frdl/proxy": {
        "url": "https://github.com/frdl/proxy/archive/refs/heads/master.zip",
        "path": "./../../../modules/frdl/proxy",
        "ignore": [".*"]
      },
      "vendor-patch/psecio.secure_dotenv": {
        "url": "https://github.com/vendor-patch/secure_dotenv/archive/refs/heads/master.zip",
        "path": "./../../../modules/vendor-patch/psecio.secure_dotenv",
        "ignore": [".*"]
      },
      "inverisoss/tiny-php-queue": {
            "url": "https://github.com/inverisOSS/tiny-php-queue/archive/refs/tags/1.0.0.zip",
            "path": "./../../../modules/inverisoss/tiny-php-queue",
            "ignore": [".*"]
        },
      "nelexa/zip": {
            "url": "https://github.com/Ne-Lexa/php-zip/archive/refs/tags/4.0.1.zip",
            "path": "./../../../modules/nelexa/zip",
            "ignore": [".*"]
        },
      "jenssegers/proxy": {
            "url": "https://github.com/jenssegers/php-proxy/archive/refs/tags/v3.1.0.zip",
            "path": "./../../../modules/jenssegers/proxy",
            "ignore": [".*"]
        }          
    }
},
"minimum-stability":"dev",
    "config": {
 
        "preferred-install": "auto",
        "cache-files-ttl": 3600,
        "prepend-autoloader": true
    },  
	 "require-dev" : {		 

	 },
  "require" : {
	"php": ">=8.0",
	"frdl/webfan" : "*", 	
	"composer/composer" :"*",	
	"friendsofphp/proxy-manager-lts":"*",     
	"yosymfony/resource-watcher" : "*",			 
	"sensiolabs/ansi-to-html" : "*",
        "teqneers/shamir" : "*",		
	"frdl/php-floodprotection": "*",
	"frdl/remote-psr4" : "*",
	"frdl/event-module" : "*",
	"webfan3/php-easy-breaker" : ">=0.3.6",
        "comcast/php-legal-licenses":"*",
	"ninsuo/php-shared-memory":"*", 
	"nette/utils":"*", 
	"nette/caching" :"*", 
	"nette/robot-loader":"*",	
	"nette/reflection":"*",  
	"nette/php-generator":">=4.0.3",
	"spatie/temporary-directory": "*",
	"nikic/php-parser" : "*",
	"hellogerard/jobby" : "*",
	"php-di/php-di" : "*",
	"caseyamcl/configula" : "*",
	"karelwintersky/monolog-pdo-handler" : "*",
	"catfan/medoo" : "*",
	"byjg/migration" : "*",
	"bramus/router" : "*",
	"adhocore/cli" : "*",
	"rosell-dk/locate-binaries" : "*",
	"rosell-dk/htaccess-capability-tester" : "*",
	"rosell-dk/exec-with-fallback" : "*",
	"league/commonmark" : "*",
        "symfony/finder": "*",
        "psr/http-message": "*",
	"relay/relay": "~2.0",
	"laminas/laminas-httphandlerrunner" : ">=2.5.0"
  },	  
  "autoload": {
    "classmap" : ["src/"],
    "psr-4": {

     },
    "files": ["functions.php"]
  },
  "suggest" : {
     "frdl/project" : "Frdlweb project template",
     "webfan3/website" : "Default Start/Installer Template",
     "frdlweb/webfat" : "...if you want to build websites or load the webfat stub helper classes... (this could produce issues on codebase server!)"
  }
}
